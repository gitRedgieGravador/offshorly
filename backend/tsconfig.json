{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["es2015", "dom"],
    "target": "es2016",
    "esModuleInterop": true, 
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,            
    "strict": true,   
    "skipLibCheck": true,
    "moduleResolution": "node",
    "outDir": "./build"
  },
  "exclude": ["node_modules"]
}
